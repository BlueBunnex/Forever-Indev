package net.minecraft.client.gui;

import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.Scanner;
import net.minecraft.client.Minecraft;
import net.minecraft.client.GameSettings; // Import GameSettings

public class GuiConfirmationScreen extends GuiScreen {

    private final GuiIngameMenu parentScreen;
    private boolean showWarningChecked;
    private GuiButtonText showWarningButton;

    public GuiConfirmationScreen(GuiIngameMenu parentScreen) {
        this.parentScreen = parentScreen;
    }

    @Override
    public void initGui() {
        this.controlList.clear();
        this.controlList.add(new GuiButtonText(0, this.width / 2 - 100, this.height / 4 + 24, "Save and Exit"));
        this.controlList.add(new GuiButtonText(1, this.width / 2 - 100, this.height / 4 + 48, "Exit Without Saving"));
        this.controlList.add(new GuiButtonText(2, this.width / 2 - 100, this.height / 4 + 72, "Cancel"));

        // Load the option to show the warning from GameSettings
        GameSettings settings = this.mc.gameSettings;
        this.showWarningChecked = settings.showExitWarning;
        this.showWarningButton = new GuiButtonText(3, this.width / 2 - 100, this.height / 4 + 96, "Show Exit Warning: " + (this.showWarningChecked ? "ON" : "OFF"));
        this.controlList.add(this.showWarningButton);
    }

    @Override
    protected void actionPerformed(GuiButton button) {
        switch (button.id) {
            case 0:
                // Save level and then exit
                if (this.mc.session != null) {
                    this.mc.displayGuiScreen(new GuiSaveLevel(this.parentScreen));
                }
                exit();
                break;

            case 1:
                // Exit without saving
                exit();
                break;

            case 2:
                // Cancel and return to the game
                this.mc.displayGuiScreen(this.parentScreen);
                break;

            case 3:
                // Toggle the show warning option
                showWarningChecked = !showWarningChecked;
                this.showWarningButton.displayString = "Show Exit Warning: " + (showWarningChecked ? "ON" : "OFF");
                this.mc.gameSettings.showExitWarning = showWarningChecked;
                this.mc.gameSettings.saveOptions();
                break;
        }
    }

    private void exit() {
        if (this.mc.gameSettings.showExitWarning) {
            // Show the warning screen
            this.mc.displayGuiScreen(new GuiConfirmationScreen(this.parentScreen)); // Show the warning screen
        } else {
            this.mc.theWorld = null;
            this.mc.displayGuiScreen(null);
        }
    }

    @Override
    public void drawScreen(int mouseX, int mouseY) {
        this.drawDefaultBackground();
        drawCenteredString(this.fontRenderer, "You have unsaved changes. Do you want to save them before exiting?", this.width / 2, this.height / 4 - 40, 16777215);
        super.drawScreen(mouseX, mouseY);
    }
}
