package net.minecraft.client.gui;

import net.minecraft.client.Minecraft;

import java.io.File;
import java.util.List;

public class GuiScreenshotManager extends GuiScreen {

    private final ScreenshotManager screenshotManager;
    private List<File> screenshots;

    public GuiScreenshotManager(ScreenshotManager screenshotManager) {
        this.screenshotManager = screenshotManager;
        this.screenshots = screenshotManager.getScreenshots();
    }

    @Override
    public void initGui() {
        this.controlList.add(new GuiButtonText(0, this.width / 2 - 100, this.height - 40, "Back"));
    }

    @Override
    protected void actionPerformed(GuiButton button) {
        if (button.id == 0) {
            this.mc.displayGuiScreen(null);
        }
    }

    @Override
    public void drawScreen(int mouseX, int mouseY, float partialTicks) {
        this.drawDefaultBackground();

        int y = 40;
        for (File screenshot : screenshots) {
            drawCenteredString(this.fontRenderer, screenshot.getName(), this.width / 2, y, 0xFFFFFF);
            y += 20;
        }

        super.drawScreen(mouseX, mouseY, partialTicks);
    }
}
